<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.adamzfc.androidbase.test.slide.SlideLayout
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:slideDirection="fromTop"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <TextView
                android:text="fromTop"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="delete"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </com.adamzfc.androidbase.test.slide.SlideLayout>
        <com.adamzfc.androidbase.test.slide.SlideLayout
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:slideDirection="fromBottom"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <TextView
                android:text="fromBottom"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="delete"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </com.adamzfc.androidbase.test.slide.SlideLayout>
        <com.adamzfc.androidbase.test.slide.SlideLayout
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:slideDirection="fromLeft"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <TextView
                android:text="fromLeft"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="delete"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
        </com.adamzfc.androidbase.test.slide.SlideLayout>
        <com.adamzfc.androidbase.test.slide.SlideLayout
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:slideDirection="fromRight"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <TextView
                android:text="fromRight"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:text="delete"
                android:gravity="center"
                android:background="@android:color/holo_red_light"
                android:layout_width="30dp"
                android:layout_height="match_parent" />
        </com.adamzfc.androidbase.test.slide.SlideLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/listview"
            android:background="@android:color/darker_gray"
            android:layout_width="170dp"
            android:layout_height="200dp"/>
        <android.support.v4.view.ViewPager
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/viewpager"
            android:layout_width="170dp"
            android:layout_height="200dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.adamzfc.androidbase.test.slide.SlideLayout
            app:slideCriticalValue="20dp"
            app:slideDirection="fromLeft"
            android:layout_width="170dp"
            android:layout_height="200dp">
            <ListView
                android:background="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/slide_test_array">
            </ListView>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="side area"/>
        </com.adamzfc.androidbase.test.slide.SlideLayout>
        <com.adamzfc.androidbase.test.slide.SlideLayout
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:slideCriticalValue="20dp"
            app:slideDirection="fromRight"
            android:layout_width="170dp"
            android:layout_height="200dp">
            <ScrollView
                android:background="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4096dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ScrollView" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test1"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test2"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test1"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test2"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test1"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_test2"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </ScrollView>
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:text="side area"/>
        </com.adamzfc.androidbase.test.slide.SlideLayout>
    </LinearLayout>

</LinearLayout>